@model task_management.ViewModels.ProjectDetails

<div id="taskModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center hidden" onclick="closeModal(event)">
    <div class="bg-white p-6 rounded-lg shadow-md w-1/2" onclick="event.stopPropagation()">
        <h2 class="text-2xl font-bold mb-4 text-center">Task Details</h2>

        <!-- Task Name and Priority on the same row -->
        <div class="flex mb-4">
            <div class="flex-grow text-left"><strong>Task Name:</strong> <span id="taskName"></span></div>
            <div class="flex-grow text-center"><strong>Priority:</strong> <span id="taskPriority" class="inline-block px-3 py-1 rounded"></span></div>
        </div>

        <!-- Start Date and End Date on the same row -->
        <div class="flex mb-4">
            <div class="flex-grow text-left"><strong>Start Date:</strong> <span id="taskStartDate"></span></div>
            <div class="flex-grow text-center"><strong>End Date:</strong> <span id="taskEndDate"></span></div>
        </div>

        <!-- Assignee and Status on the same row -->
        <div class="flex mb-4">
            <div class="flex-grow text-left"><strong>Assignee:</strong> <span id="taskAssignee"></span></div>
            <div class="flex-grow text-center"><strong>Status:</strong> <span id="taskStatus" class="inline-block px-3 py-1 rounded"></span></div>
        </div>

        <!-- Description -->
        <div class="mb-4">
            <strong>Description:</strong> <span id="taskDescription"></span>
        </div>

        <div class="mt-4 text-right">
            <button class="bg-red-500 text-white py-2 px-4 rounded" onclick="closeModal()">Close</button>
        </div>
    </div>
</div>