@model string

<div id="popup" class="fixed top-0 left-0 w-full h-full bg-gray-800 bg-opacity-50 flex items-center justify-center">
    <div class="bg-white rounded-lg shadow-lg p-6 w-96">
        <h2 class="text-xl font-bold mb-4 flex items-center">
            <i class="fas fa-bell text-yellow-500 mr-2"></i>
            Notification
        </h2>
        <p class="text-gray-700">
            A password reset link has been sent to your email: @Model. <br />
            Please check your email!
        </p>
        <div class="mt-4 flex justify-end">
            <button id="confirmButton" class="bg-black text-white px-4 py-2 rounded">Confirm</button>
        </div>
    </div>
</div>
