@model task_management.ViewModels.UserDetails;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile Detail</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">
            <img src="https://storage.googleapis.com/a1aa/image/q4khwifUck1iICrneFfSMWf7zgu9cbfH4KQXSlRDan7foDs4E.jpg" 
                 alt="Company Logo" height="40" width="40" class="rounded-full"> 
        </a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Tasks</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Create Task</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Employees</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Reports</a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <span class="text-red-500 mr-2">Admin</span>
                <img src="https://storage.googleapis.com/a1aa/image/FiBdZjCeMz3ZdCvWFVP431jFaiiflH9na9Cew3wZZ1aDifLOB.jpg" 
                     alt="Admin Avatar" height="40" width="40" class="rounded-full">
            </li>
        </ul>
    </nav>

    <div class="container mt-5">
        <h1 class="text-center mb-4">User Profile Detail</h1>

        <div class="card">
            <div class="card-header">
                <h5>User Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <img src="~/images/@Model.User.PhotoUrl" 
                             alt="User Avatar" class="img-fluid rounded-circle mb-3" style="width: 150px;">
                    </div>
                    <div class="col-md-8">
                        <h4>@Model.User.fullName</h4>
                        <p><strong>Email:</strong> @Model.User.Email</p>
                        <p><strong>Role:</strong> @Model.RoleNames.Take(1).FirstOrDefault()</p>
                        <p><strong>Phone Number:</strong> @Model.User.PhoneNumber</p>
                        <p><strong>Address:</strong> @Model.User.address</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <h5>Recent Joint Projects</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model.Projects)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Project" asp-action="Details" asp-route-id="@project.projectId">
                                    @project.name
                                </a>
                            </td>
                            <td>@project.startDate</td>
                            <td><span class="badge badge-success">@project.status</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="logout-btn-container">
            <form method="post" action="/Auth/Logout">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
