@model IEnumerable<task_management.Models.Project>

<h2 class="text-2xl font-bold mb-6">Projects</h2>

<div class="d-flex justify-content-between mb-4">
    <a asp-action="Create" class="btn btn-primary">
        Create New Project
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover text-center">
        <thead class="table-light">
            <tr>
                <th>Project Name</th>
                <th>Status</th>
                <th>Start Date</th>
                <th>Organization</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.name</td>
                    <td>
                        @{
                            string badgeClass = project.status switch
                            {
                                "Not Started" => "bg-secondary",  
                                "In Progress" => "bg-primary",     
                                "Completed" => "bg-warning",       
                                _ => "bg-light"                    
                            };
                        }
                        <span class="badge @badgeClass">
                            @project.status
                        </span>
                    </td>
                    <td>@project.startDate.ToShortDateString()</td>
                    <td>@(project.Organization != null ? project.Organization.name : "No Organization")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@project.projectId" class="text-decoration-none text-primary" title="Edit">
                            Edit
                        </a>
                        |
                        <a asp-action="Details" asp-route-id="@project.projectId" class="text-decoration-none text-info" title="Details">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
