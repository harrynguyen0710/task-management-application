@model task_management.ViewModels.ProjectDetails;
@{
    ViewData["Title"] = "Project Details";
}
<html>
<head>
    <title>Project Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-gray-100">
    <div class="container mx-auto mt-8">
        <h1 class="text-3xl font-bold mb-4">Project Details</h1>
        <div class="flex flex-wrap -mx-4">
            <div class="w-full lg:w-1/2 px-4 mb-6">
                <div class="bg-white p-6 rounded-lg shadow mb-6">
                    <h2 class="text-2xl font-bold mb-2" "card-title">@Model.Project.name</h2>
                    <p class="text-gray-700 mb-4"><strong>Description:</strong> @Model.Project.description</p>
                    <p class="text-gray-700 mb-4"><strong>Start Date:</strong> @Model.Project.startDate.ToString("d")</p>
                    <p class="text-gray-700 mb-2"><strong>Status:</strong></p>
                        @{
                            string badgeClass = Model.Project.status switch
                            {
                                "Not Started" => "bg-secondary",
                                "In Progress" => "bg-primary",
                                "Completed" => "bg-success", // Changed to green for completion
                                _ => "bg-light"
                            };
                        }
                        <span class="badge @badgeClass">
                            @Model.Project.status
                        </span>
                </div>
            </div>
            <div class="w-full lg:w-1/2 px-4 mb-6">
                <div class="bg-white p-6 rounded-lg shadow mb-6">
                    <h2 class="text-2xl font-bold mb-4">Add Users to Project</h2>
                    <div class="mb-4">
                        <div class="card-body">
                            <form method="post" asp-action="AddUserToProject" asp-controller="Project">
                                <input type="hidden" name="projectId" value="@Model.Project.projectId" />
                                <div class="form-group">
                                    <label for="userSelect" class="block text-gray-700 mb-2">Select User</label>
                                    <select id="userSelect" name="userId" class="form-control" required>
                                        <option value="">-- Select a user --</option>
                                        @foreach (var user in ViewBag.AvailableUsers)
                                        {
                                            <option value="@user.Value">@user.Text</option>
                                        }
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary bg-blue-500 text-white px-4 py-2 rounded mb-4">Add User</button>
                            </form>
                            @if (ViewData["AddUserMessage"] != null)
                            {
                                <div class="alert alert-info mt-2">@ViewData["AddUserMessage"]</div>
                            }
                        </div>
                    </div>
                    <h2 class="text-2xl font-bold mb-4">Joint Staff</h2>
                    <div class="mb-4">
                        @foreach (var user in Model.UserRole.Take(5))
                        {
                            <div class="w-full flex justify-between">
                                <p class="text-gray-700 w-1/3"><strong>UserName</strong></p>
                                <p class="text-gray-700 w-1/3 text-center"><strong>Roles</strong></p>
                                <p class="text-gray-700 w-1/3 text-right"><strong></strong></p>
                            </div>

                            <div class="w-full flex justify-between items-center py-2 border-b">
 
                                <p class="text-gray-700 w-1/3 text-left">
                                    @user.UserName
                                </p>

                                <p class="text-gray-700 w-1/3 text-center">
                                    @string.Join(", ", user.Roles)
                                </p>
                                <script src="~/js/popup.js"></script>
                                <form class="w-1/3 text-right" method="post" asp-action="RemoveUserToProject" asp-controller="Project">
                                    <input type="hidden" name="projectId" value="@Model.Project.projectId" />
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button class="ml-2 text-red-500" onclick="confirmRemovePerson(event)" title="Remove User">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>

                            @if (Model.UserRole.Count > 5)
                            {
                                <div class="flex justify-center mt-2">
                                    <p class="text-blue-500 cursor-pointer">See More</p>
                                </div>
                            }
                        }
                    </div>

                </div>
            </div>
        </div>
        <div class="bg-white p-6 rounded-lg shadow mb-6">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-2xl font-bold">Project Tasks</h2>
                <a asp-controller="Task" asp-action="AddTask" asp-route-projectId="@Model.Project.projectId">
                    <button class="bg-green-500 text-white px-4 py-2 rounded">
                        <i class="fas fa-plus"></i>
                    </button>
                </a>
            </div>
            <div class="flex justify-between mb-4">
                <input type="text" placeholder="Search by title" class="border border-gray-300 p-2 rounded w-1/4">
                <select class="border border-gray-300 p-2 rounded w-1/4">
                    <option>Filter by Status</option>
                    <option>Not Started</option>
                    <option>In Progress</option>
                    <option>Completed</option>
                </select>
                <select class="border border-gray-300 p-2 rounded w-1/4">
                    <option>Filter by Priority</option>
                    <option>High</option>
                    <option>Medium</option>
                    <option>Low</option>
                </select>
                <select class="border border-gray-300 p-2 rounded w-1/4">
                    <option>Filter by Assigned To</option>
                    <option>domanhhung6404@gmail.com</option>
                    <option>user2@example.com</option>
                    <option>user3@example.com</option>
                </select>
            </div>
            <div class="mb-4">
                @if (Model.Tasks != null && Model.Tasks.Any())
                {
                    <!-- Tiêu đề bảng -->
                    <div class="w-full grid grid-cols-6 gap-4 text-center font-semibold text-gray-700">
                        <div>Name</div>
                        <div>Description</div>
                        <div>Start Date</div>
                        <div>Due Date</div>
                        <div>Priority</div>
                        <div>Assigned To</div>
                        <div></div>
                    </div>

                    @foreach (var task in Model.Tasks)
                    {
            

                        <div class="w-full grid grid-cols-6 gap-4 items-center text-center py-2 border-b">
                            <div class="text-gray-700">@task.name</div>
                            <div class="text-gray-700">@task.description</div>
            @*                
                            <div class="text-gray-700">@task.StartDate.ToString("dd/MM/yyyy")</div>

                            <!-- Ngày Hết Hạn -->
                            <div class="text-gray-700">@task.DueDate.ToString("dd/MM/yyyy")</div> *@
                                        @{
                                            string priorityClass = @task.priority switch
                                            {
                                                "High" => "bg-red-500 text-white",
                                                "Medium" => "bg-yellow-500 text-black",
                                                "Low" => "bg-green-500 text-white",
                                                _ => "bg-gray-500 text-white"
                                            };
                                        }
                            <div>
                                <span class="inline-block px-3 py-1 rounded @priorityClass">
                                    @task.priority
                                </span>
                            </div>
                          
                            <div class="text-gray-700">@task.User</div>
                            <div>
                               @*  <form method="post" asp-action="RemoveTask" asp-controller="Project" onsubmit="return confirm('Are you sure you want to remove this task?');">
                                    <input type="hidden" name="projectId" value="@Model.Project.projectId" />
                                    <input type="hidden" name="taskId" value="@task.Id" /> *@
                                    <button type="submit" class="text-red-500 hover:text-red-700 transition-colors duration-300" title="Remove Task">
                                        <i class="fas fa-trash"></i>
                                    </button>
                              @*   </form> *@
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-gray-700">No tasks available for this project.</p>
                }
            </div>
            <script src="~/js/popup.js"></script>
            <div class="flex justify-end mt-4">
                <button class="bg-white text-blue-500 px-4 py-2 rounded border border-blue-500">&lt;</button>
                <button class="bg-white text-blue-500 px-4 py-2 rounded border border-blue-500 ml-2">1</button>
                <button class="bg-white text-blue-500 px-4 py-2 rounded border border-blue-500 ml-2">2</button>
                <button class="bg-white text-blue-500 px-4 py-2 rounded border border-blue-500 ml-2">3</button>
                <button class="bg-white text-blue-500 px-4 py-2 rounded border border-blue-500 ml-2">&gt;</button>
            </div>
        </div>
       
        <div class="flex justify-between space-x-4">
            <a asp-action="Index">
                <button class="bg-blue-500 text-white px-4 py-2 rounded">Back to List</button>
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Project.projectId">
                <button class="bg-yellow-500 text-white px-4 py-2 rounded">Edit</button>
            </a>  
        </div>
    </div>

    <!-- Popup -->
    <div id="popup" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
        <div class="bg-white p-6 rounded-lg shadow-lg">
            <h2 class="text-xl font-bold mb-4">Confirm Delete</h2>
            <p id="popupMessage" class="mb-4"></p>
            <div class="flex justify-end space-x-4">
                <button class="bg-gray-500 text-white px-4 py-2 rounded" onclick="hidePopup()">Cancel</button>
                <button id="confirmDelete" class="bg-red-500 text-white px-4 py-2 rounded">Delete</button>
            </div>
        </div>
    </div>
</body>
</html>