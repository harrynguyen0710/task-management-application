@model task_management.Models.Project

@{
    ViewData["Title"] = "Edit Project";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Project</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.0/dist/tailwind.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body class="bg-gray-100 text-gray-900">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div>
            @Html.Partial("_SidebarPartial")
        </div>

        <!-- Main Content -->
        <div class="flex-1 container mx-auto p-10 overflow-y-auto">
            <h1 class="text-3xl font-bold text-center mb-6">Edit Project</h1>

            <!-- Edit Project Form -->
            <div class="bg-white rounded-lg shadow-md p-8 max-w-3xl mx-auto">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="projectId" />

                    <div class="mb-4">
                        <label asp-for="name" class="block text-base font-medium text-gray-700">Project Name</label>
                        <input asp-for="name" class="mt-2 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base p-3" />
                        <span asp-validation-for="name" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="description" class="block text-base font-medium text-gray-700">Description</label>
                        <textarea asp-for="description" rows="3" class="mt-2 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base p-3"></textarea>
                        <span asp-validation-for="description" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="startDate" class="block text-base font-medium text-gray-700">Start Date</label>
                        <input asp-for="startDate" type="date" class="mt-2 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base p-3" />
                        <span asp-validation-for="startDate" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="progress"block text-base font-medium text-gray-700">Progress</label>
                        <select asp-for="progress" class="mt-2 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base p-3">
                            <option value="">Update Progress</option>
                            <option value=0>0%</option>
                            <option value=25>25%</option>
                            <option value=50>50%</option>
                            <option value=75>75%</option>
                            <option value=100>100%</option>
                        </select>
                        <span asp-validation-for="startDate" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="status" class="block text-base font-medium text-gray-700">Status</label>
                        <select asp-for="status" class="mt-2 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base p-3">
                            <option value="">Select Status</option>
                            <option value="Not Started">Not Started</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Completed">Completed</option>
                        </select>
                        <span asp-validation-for="status" class="text-red-500 text-sm"></span>


                    </div>
                    <div class="mb-6">
                        <label asp-for="target" class="block text-base font-medium text-gray-700">Target</label>
                        <input asp-for="target" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-base p-2" />
                        <span asp-validation-for="target" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="flex justify-between mt-6">
                        <a href="@Url.Action("Index", "Project")" class="bg-gray-500 text-white text-base px-4 py-2 rounded-md shadow-md hover:bg-gray-600 focus:outline-none">
                            <i class="fas fa-arrow-left mr-2"></i> Back to List
                        </a>
                        <button type="submit" class="bg-blue-600 text-white text-base px-6 py-2 rounded-md shadow-md hover:bg-blue-700 focus:outline-none">
                            <i class="fas fa-save mr-2"></i> Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
